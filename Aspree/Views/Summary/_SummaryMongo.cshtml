                                            {
                                                statusName = "Submitted for Review";
                                            }

                                            <div class="timeline-body">
                                                <div class="row mt-10">
                                                    <div class="col-sm-4">
                                                        <small class="font-16"> @forms.FormTitle</small>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        
                                                        <small class="@(forms.FormStatusId == (int)Aspree.Core.Enum.FormStatusTypes.Published ? "text-success" : forms.FormStatusId == (int)Aspree.Core.Enum.FormStatusTypes.Submitted_for_review ? "text-submit-for-review" : "text-warning") ml-5 link font-16" data-is-form-submitted="true" data-summarypage-userentity="@activity.Id" id="@forms.FormGuid-@activity.Id" onclick="Summary.OpenSummaryPageFormPopup('@Model.EntityNumber', '@forms.FormGuid', '@activity.ActivityGuid', this, @activity.ProjectVersion)">
                                                            @statusName
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
