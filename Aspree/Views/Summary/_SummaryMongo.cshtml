                                                                <button type="button" class="btn btn-danger w-btn" onclick="Summary.DeleteSummaryPageActivity('@activity.Id', '@activity.ActivityName')">
                                                                    <i class="fa fa-trash-alt"></i>
                                                                </button>
                                                                }
                                                            }
                                                        }
                                                    </small>
                                                </div>
                                            </div>
                                            <hr>
                                        </div>

                                        @foreach (var forms in activity.SummaryPageActivityFormsList)
                                        {
                                            string statusName = (forms.FormStatusId == (int)Aspree.Core.Enum.FormStatusTypes.Published ? "Submitted" : Enum.GetName(typeof(Aspree.Core.Enum.FormStatusTypes), forms.FormStatusId).Replace("_", " "));
