                                                            <i class="fa fa-edit"></i>
                                                        </button>

                                                        @if (deleteSummaryPageActivityRole.Contains(LoggedInUser.Roles.FirstOrDefault()))
                                                        {

                                                            if (activity.ActivityName == Aspree.Core.Enum.DefaultFormName.Project_Linkage.ToString().Replace("_", " "))
                                                            {
                                                                int frmStatus = 0;
                                                                frmStatus = activity.SummaryPageActivityFormsList.Select(x => x.FormStatusId).FirstOrDefault();
                                                                if (frmStatus == (int)Aspree.Core.Enum.FormStatusTypes.Not_entered)
                                                                {
                                                                    <button type="button" class="btn btn-danger w-btn " onclick="Summary.DeleteSummaryPageActivity('@activity.Id', '@activity.ActivityName')">
