@model  List<Aspree.Core.ViewModels.ActivityCategoryViewModel>
@{
    ViewBag.Title = "Activities";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var Roles = ViewBag.Roles as List<Aspree.Core.ViewModels.RoleModel>;
    var FormCategories = ViewBag.FormCategories as List<Aspree.Core.ViewModels.FormCategoryViewModel>;
    var EntityTypes = ViewBag.EntityTypes as List<Aspree.Core.ViewModels.EntityTypeViewModel>;
    var IsProjectAdmin = ViewBag.LoggedInUser.Roles.Contains("Project Admin");
    var IsSystemAdmin = ViewBag.LoggedInUser.Roles.Contains("System Admin");
}


@section NavBarLeft{
    <h3 class="text-themecolor m-b-0 m-t-0">Project Builder</h3>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
        <li class="breadcrumb-item">Project Builder</li>
        <li class="breadcrumb-item active">Activities</li>
    </ol>
}

<div class="col-sm-4 col-md-4 col-lg-3">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Library</h3>
            <h4 class="card-subtitle">Existing Activities</h4>
            <form class="form-horizontal" autocomplete="off">
                <div class="input-group form-group">
                    <input onkeyup="Activity.search(false)" class="form-control" id="search-var-text" style="border-radius: .25rem 0 0 .25rem;" />
                    <div class="input-group-append">
                        <button onclick="Activity.search(true)" class="btn btn-info" type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-10" for="NewVariable" style="color:black">New Activity</label>
                    <button type="button" id="btnResetVariable" onclick="Activity.resetActivity()" class="btn btn-sm waves-effect waves-light btn-info m-b-5">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                </div>
            </form>
        </div><!-- /.card-header -->
        <div class="card-body">
            <div class="pb-library-list-wrap">
                <div class="list-menu-wrap">
                    <ul class="list-menu activity-categories">
                        @foreach (var menu in Model)
                        {
                        <li class="list-dropdown">
                            @if (ViewBag.LoggedInUser.Roles.Contains("System Admin"))
                                {
                                    if (menu.CategoryName != Aspree.Core.Enum.ActivityCategories.Default.ToString())
                                    {
                                <button title="Edit" onclick="Category.editActivityCategoriesFormBuilder('@menu.Guid')" type="button" class="btn-sm waves-effect waves-light btn-info"><i class="far fa-edit"></i></button>
                                    }
                                }
                            <a href="javascript:void(0);" id="@menu.Guid">@menu.CategoryName</a>
                            <div class="list-submenu" style="display:none">
                                <ul class="variable-categories">
                                    @foreach (var subMenu in menu.Activities)
                                        {
                                            if (ViewBag.ProjectId.ToString() == subMenu.ProjectId.ToString())
                                            {
                                        <li data-variable="@subMenu.Guid">
                                            <a class="sub-category-txt" data-text="@subMenu.Name.ToLower()" href="javascript:void(0);" onclick="Activity.edit('@subMenu.Guid')">@subMenu.Name</a>
                                        </li>
                                            }
                                        }
                                </ul>
                            </div>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="col-sm-8 col-md-8 col-lg-9">
    <div class="card">
        <div class="card-body">
            @Html.Partial("~/Views/Shared/ProjectBuilder.cshtml")
        </div>
        <div class="row p-10">
            <div class="col-sm-3 col-md-3 col-lg-4">
                <div class="card">
                    <div class="card-header">
                        Form Library
                    </div>
                    <div class="card-body" style="height:550px; overflow:auto;">
                        <div class="pb-library-list-wrap">
                            <div class="list-menu-wrap">
                                <ul class="list-menu" id="FormLibraryList">
                                    @foreach (var menu in FormCategories)
                                    {
                                        if (menu.IsDefaultFormCategory != (int)Aspree.Core.Enum.DefaultFormType.Default)
                                        {
                                    <li class="list-dropdown">
                                        <a href="javascript:void(0);" onmousedown="Activity.setCurrentForm('@menu.Guid', '@menu.CategoryName',true)" data-id="@menu.Guid" ondblclick="Activity.addFormCategory('@menu.Guid')">@menu.CategoryName</a>
                                        <div class="list-submenu">
                                            <ul>
                                                @foreach (var subMenu in menu.Forms)
                                                        {
                                                            if (subMenu.ProjectId.ToString() == ViewBag.ProjectId.ToString())
                                                            {
                                                        <li class="list-element-disabled" data-entity-type-list='@Json.Encode(subMenu.EntityType)'><a onmousedown="Activity.setCurrentForm('@subMenu.Guid', '@subMenu.Name',false)" href="javascript:void(0);" data-id="@subMenu.Guid" ondblclick="Activity.addForm('@subMenu.Guid','@subMenu.Name')">@subMenu.Name</a> </li>
                                                            }
                                                        }
                                            </ul>
                                        </div>
                                    </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <form class="form-horizontal" autocomplete="off" id="frmSaveHeaderData">
                            <div class="form-group m-b-0">
                                <div class="row">
                                    <div class="col-lg-4  p-l-0">
                                        <input type="hidden" id="ProjectId" name="ProjectId" value="@ViewBag.ProjectId" />
                                        <input type="hidden" id="Guid" name="Guid" />
                                        <label for="ActivityName">Activity Name<span class="text-danger">*</span></label>
                                        <input class="form-control form-control-sm" type="text" id="ActivityName" name="ActivityName" required data-val="true" data-val-required="This field is required." maxlength="50" />
                                        <span class="field-validation-valid form-control-feedback" data-valmsg-for="ActivityName" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="@(ViewBag.LoggedInUser.Roles.Contains("System Admin") ? "col-lg-3" :"col-lg-4" )  p-l-0 ">
                                        <label for="ActivityCategoryId">Category<span class="text-danger">*</span></label>
                                        <select class="form-control form-control-sm" id="ActivityCategoryId" name="ActivityCategoryId" required data-val="true" data-val-required="This field is required.">
                                            <option value="">Select Category</option>
                                            @foreach (var menu in Model)
                                            {
                                                if (menu.CategoryName == Aspree.Core.Enum.ActivityCategories.Default.ToString())
                                                {
                                            <option class="dropdown-disabled-options-background" disabled value="@menu.Guid">@menu.CategoryName</option>
                                                }
                                                else
                                                {
                                            <option value="@menu.Guid">@menu.CategoryName</option>
                                                }
                                            }
                                        </select>
                                        <span class="field-validation-valid form-control-feedback" data-valmsg-for="ActivityCategoryId" data-valmsg-replace="true"></span>
                                    </div>
                                    @if (ViewBag.LoggedInUser.Roles.Contains("System Admin"))
                                    {
                                    <div class="col-lg-1 p-l-0 p-t-20">
                                        <button type="button" title="Add New Category" onclick="Category.addActivityCategoryFormBuilder()" class="btn btn-sm waves-effect waves-light btn-info m-b-5 m-t-5">
                                            <i class="fas fa-plus-circle"></i>
                                        </button>
                                    </div>
                                    }
                                    <div class="col-lg-4 p-l-0 p-r-0">
                                        <label for="EntityTypes">Entities<span class="text-danger">*</span></label>
                                        <select class="form-control form-control-sm" id="EntityTypes" name="EntityTypes" onchange="Activity.onEntityTypesChange(this)" required data-val="true" data-val-required="This field is required.">
                                            <option value="">Select Entity Type</option>
                                            @foreach (var entityType in EntityTypes)
                                            {
                                            <option value="@entityType.Guid">@entityType.Name</option>
                                            }
                                        </select>
                                        <span class="field-validation-valid form-control-feedback" data-valmsg-for="EntityTypes" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-body" id="formContainer" style="min-height:400px">
                        <h2 id="drag-message" class="text-center">Drag and Drop your forms here</h2>
                    </div>
                    <div class="card-footer">
                        <form class="form-horizontal m-b-10">
                            <div class="form-group hide">
                                <label for="IsRepeat">Does this activity repeat?<span class="text-danger">*</span></label>
                                <select onchange="Activity.onRepeatationChange(this)" class="form-control form-control-sm" id="IsRepeat" name="IsRepeat">
                                    <option value="true">Yes</option>
                                    <option value="false" selected>No</option>
                                </select>
                                <span class="field-validation-valid form-control-feedback" data-valmsg-for="EntityTypes" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group hide repeatation-count">
                                <label for="RepeatationCount">If yes how often?<span class="text-danger">*</span></label>
                                <select class="form-control form-control-sm" id="RepeatationCount" name="RepeatationCount">
                                    @for (int i = 1; i <= 30; i++)
                                    {
                                    <option value="@i">@i</option>
                                    }
                                </select>
                                <span class="field-validation-valid form-control-feedback" data-valmsg-for="RepeatationCount" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group hide">
                                <label for="DependentActivityId">Dose it depend on another acitivity?</label>
                                <select class="form-control form-control-sm" id="DependentActivityId" name="DependentActivityId">
                                    <option value=""></option>
                                    @foreach (var category in Model)
                                    {
                                        foreach (var item in category.Activities)
                                        {
                                    <option value="@item.Guid">@item.Name</option>
                                        }
                                    }
                                </select>
                                <span class="field-validation-valid form-control-feedback" data-valmsg-for="DependentActivityId" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group hide">
                                <label for="AccessRoles">Access Roles<span class="text-danger">*</span></label>
                                <div classs="col-6 p-l-0 p-r-0">
                                    <span class="field-validation-valid form-control-feedback" data-valmsg-for="ActivityRoles" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group hide" id="divIsActivityRequireAnEntity">
                                <label id="IsActivityRequireAnEntityLabel"><span class="text-danger">*</span></label>
                                <select class="form-control form-control-sm" id="IsActivityRequireAnEntity" name="IsActivityRequireAnEntity" data-style="form-control1 btn-secondary btn-sm">
                                    <option value="true">Yes</option>
                                    <option value="false" selected>No</option>
                                </select>
                                <span class="field-validation-valid form-control-feedback" data-valmsg-for="IsActivityRequireAnEntity" data-valmsg-replace="true"></span>
                            </div>
                        </form>
                        @if (IsSystemAdmin || IsProjectAdmin)
                        {
                            <button id="delete-activity" type="button" onclick="Activity.deleteConfirm()" class="btn btn-danger waves-effect waves-light btn-info pull-right hide" data-toggle="modal" data-target="#manage-confirm">Delete</button>
                        }
                        <button id="resetActivity" type="button" onclick="Activity.resetActivity()" class="btn btn-inverse waves-effect waves-light btn-info pull-right m-r-10">Clear</button>
                        <a href="/projectbuilder" class="btn btn-inverse waves-effect waves-light pull-right m-r-10">Cancel</a>
                        <a href="/projectbuilder/Forms/@ViewBag.ProjectId" class="btn btn-inverse waves-effect waves-light pull-right m-r-10">Back</a>
                        <button id="SaveActivity" type="button" onclick="Activity.save()" class="btn waves-effect waves-light btn-info pull-right m-r-10">Save</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="hide">
    <div id="formTemplate">
        <div class="row">
            <div class="col-lg-1  p-l-0">
                <i class="mdi mdi-menu" style="font-size:22px;cursor: ns-resize" title="Move Up/Down"></i>
            </div>
            <div class="col-lg-1  p-l-0">
                <button type="button" title="Remove" onclick="$(this).parent().parent().remove()" class="btn btn-sm waves-effect waves-light btn-danger pull-right btn-activityedit">
                    <i class="far fa-times-circle"></i>
                </button>
            </div>
            <div class="col-lg-10  p-l-0 var-label">

            </div>
            <div class="col-lg-3 p-l-0 p-r-0 hide">
                <select class="form-control form-control-sm field-permision btn-activityedit" multiple data-style="form-control1 btn-secondary btn-sm">
                    @foreach (var item in Roles)
                    {
                    if (!item.IsSystemRole)
                    {
                    <option value="@item.Guid">@item.Name</option>
                    }
                    }
                </select>
            </div>
        </div>

    </div>
</div>

<!-- Delete Activity -->
<div class="modal fade user-search-poppus" id="manage-confirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
            </div>
            <div class="modal-body">
                <div class="sf-submit-info">
                    Are you sure want to active/deactivate selected user?
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Activity.delete()" class="btn-sm waves-effect waves-light btn-info" data-dismiss="modal">Yes</button>
                <button type="button" class="btn-sm  btn btn-inverse waves-effect waves-light" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit Activity Category Popus -->
<div class="modal fade user-search-poppus" id="change-categoryname-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Activity Category</h5>
            </div>
            <div class="modal-body">
                <div class="role-model-error"></div>
                <div class="sf-submit-info1">
                    <form class="form-horizontal" id="frm-edit-category" autocomplete="off">
                        <input id="Guid" name="Guid" type="hidden" />
                        <div class="form-group">
                            <label for="editActivityCategory">Category Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editActivityCategory" required name="editActivityCategory" maxlength="30" data-val="true" data-val-required="This field is required.">
                            <span class="field-validation-valid form-control-feedback" data-valmsg-for="editActivityCategory" data-valmsg-replace="true"></span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Category.updateActivityCategoryNameFormBuilder(true);" class="btn-sm waves-effect waves-light btn-info">Save</button>
                <button id="btn-cancel" type="button" class="btn-sm btn-cancel btn btn-inverse waves-effect waves-light" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Add New Activity Category Popus -->
<div class="modal fade user-search-poppus" id="add-categoryname-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Activity Category</h5>
            </div>
            <div class="modal-body">
                <div class="role-model-error"></div>
                <div class="sf-submit-info1">
                    <form class="form-horizontal" id="frm-add-category" autocomplete="off">
                        <input id="Guid" name="Guid" type="hidden" />
                        <div class="form-group">
                            <label for="addActivityCategory">Category Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="addActivityCategory" required name="addActivityCategory" maxlength="30" data-val="true" data-val-required="This field is required.">
                            <span class="field-validation-valid form-control-feedback" data-valmsg-for="addActivityCategory" data-valmsg-replace="true"></span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Category.saveActivityCategoryFormBuilder();" class="btn-sm waves-effect waves-light btn-info">Save</button>
                <button id="btn-cancel" type="button" class="btn-cancel btn-sm  btn btn-inverse waves-effect waves-light" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script src="/content/assets/plugins/moment/moment.js"></script>
    <script src="/content/assets/plugins/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
        $(function () {
            $('.wizard-content ul li:eq(2)').removeClass('disabled').addClass('current');


            $('#sidebarnav > li').removeClass('active');
            $('#sidebarnav > li:nth-child(5)').addClass('active');
        })

        $(".list-dropdown > a").click(function () {
            if ($(this).parent().hasClass("active")) {
                $(".list-dropdown", $(this).parent()).removeClass("active");
                $(".list-submenu", $(this).parent()).slideUp(200);
                $(this).parent().removeClass("active");
            } else {
                $(".list-dropdown", $(this).parent()).removeClass("active");
                $(this).next(".list-submenu").slideDown(200);
                $(this).parent().addClass("active");
            }
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/apps/activities")
    @Scripts.Render("~/apps/categories")
    
}

@section Styles{
    <link href="/content/assets/plugins/wizard/steps.css" rel="stylesheet">
    <link href="/content/assets/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
}
