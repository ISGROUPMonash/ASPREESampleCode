@model  List<Aspree.Core.ViewModels.ActivityCategoryViewModel>
@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    //var Roles = ViewBag.Roles as List<Aspree.Core.ViewModels.RoleModel>;
    //var FormCategories = ViewBag.FormCategories as List<Aspree.Core.ViewModels.FormCategoryViewModel>;
    //var EntityTypes = ViewBag.EntityTypes as List<Aspree.Core.ViewModels.EntityTypeViewModel>;
    var IsProjectAdmin = ViewBag.LoggedInUser.Roles.Contains("Project Admin");
    var AllActivity = ViewBag.AllActivity;
    var listData = new List<Guid>();
    var dataList = ViewBag.ParticipantData;
}

@section NavBarLeft{
    <h3 class="text-themecolor m-b-0 m-t-0">Search</h3>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
        <li class="breadcrumb-item">Search</li>
        <li class="breadcrumb-item active">Result</li>
    </ol>
}

<div class="col-sm-4 col-md-4 col-lg-3">
    <input type="hidden" id="ProjectId" name="ProjectId" value="@ViewBag.ProjectId" />
    <div class="card">
        <div class="card-header">
            @{ var ptid = "000" + ViewBag.ParticipantData.Id;}
            <h3 class="card-title">PT Id : @dataList.wh  </h3>
        <h4 class="card-subtitle"></h4>
    </div><!-- /.card-header -->
    <div class="card-body">
        <div class="pb-library-list-wrap">
            <div class="list-menu-wrap">
                <h5 class="card-subtitle">Address: @ViewBag.ParticipantData.Address</h5>
                <h5 class="card-subtitle">Phone: @ViewBag.ParticipantData.Mobile</h5>
                <h5 class="card-subtitle">Email:  @ViewBag.ParticipantData.Email</h5>
            </div>
        </div>
    </div>
</div>
</div>


<div class="col-sm-8 col-md-8 col-lg-9">
    <div class="col-sm-10 col-md-10 col-lg-12">
        <div class="card">
            <div class="card-header">
                Create new activity
            </div>
            <div class="card-body">
                <div style="min-height:250px">
                    <input type="hidden" id="ProjectId" name="ProjectId" value="@ViewBag.ProjectId" />
                    <form class="form-horizontal" id="frm-schedule">
                        @foreach (var item in AllActivity)
                        {
                            if (item.ProjectId.ToString() == ViewBag.ProjectId && item.ScheduleType != 0)
                            {
                                if (item.ActivityRoleNames.Contains(ViewBag.ParticipantData.RoleName))
                                {
                                    listData.Add(item.Guid);
                                    <div class="form-group">
                                        <input type="hidden" class="guid-list" id="Guid" name="Guid" value="@item.Guid" />
                                        <div class="row" style="border-bottom: solid; border-color: #94ddea; border-bottom-width: thin;">
                                            <div class="col-md-4">
                                                <p class="text-success">
                                                    <b>
                                                        <span>  @item.ActivityName </span>

                                                        @if (item.RepeatationType == 1)
                                                        {
                                                            <span>, Repete</span>
                                                        }
                                                        @if (item.ScheduleType == 1)
                                                        {
                                                            <span>(Fixed Date)</span>
                                                        }
                                                        else if (item.ScheduleType == 2)
                                                        {
                                                            <span>(From Participants Joined The Project)</span>
                                                        }
                                                        else if (item.ScheduleType == 3)
                                                        {
                                                            <span>(From Start Of The Project)</span>
                                                        }
                                                    </b>
                                                </p>
                                            </div>
                                            <div class="col-md-4">
                                                @string.Join(", ", item.ActivityRoleNames)
                                            </div>
                                            <div class="col-md-4">
                                                @if (item.ScheduleType == 1)
                                                {
                                                    var sDate = item.StartDate != null ? item.StartDate.ToString("dd/MM/yyyy") : "";
                                                    var eDate = item.EndDate != null ? item.EndDate.ToString("dd/MM/yyyy") : "";
                                                    <span>( @sDate - @eDate )</span>
                                                }
                                                else
                                                {
                                                    var sDate = item.StartDate != null ? item.StartDate.ToString("dd/MM/yyyy") : "";
                                                    <span>@sDate </span>
                                                }
                                            </div>
                                        </div>
                                        @foreach (var forms in item.Forms)
                                        {
                                            <div class="row">
                                                <div class="col-md-4">
                                                    @forms.FormTitle
                                                </div>
                                                <div class="col-md-4">
                                                    <span class="text-warning">Pending</span>
                                                    <span class="text-warning">@*@forms.Status*@</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            }
                        }

                    </form>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>


</div>



<div class="hide">
    <div id="formTemplate">
        <div class="row">
            <div class="col-lg-2  p-l-0">
                <i class="mdi mdi-menu" style="font-size:22px;cursor: ns-resize" title="Move Up/Down"></i>
            </div>

            <div class="col-lg-8  p-l-0 var-label" onclick="Schedule.scheduleActivity($(this))">

            </div>

            <div class="col-lg-1  p-l-0">
                <button type="button" title="View" onclick="Schedule.scheduleActivity($(this))" class="btn btn-sm waves-effect waves-light btn-info pull-right">
                    <i class="far fa-eye"></i>
                </button>
            </div>

            <div class="col-lg-1  p-l-0 p-r-0">
                <button type="button" title="Remove" onmousedown="Schedule.clearScheduleActivity()" onclick="$(this).parent().parent().remove()" class="btn btn-sm waves-effect waves-light btn-danger pull-right">
                    <i class="far fa-times-circle"></i>
                </button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="/content/assets/plugins/moment/moment.js"></script>
    <script src="/content/assets/plugins/daterangepicker/daterangepicker.js"></script>

    <script src="/content/assets/plugins/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script>
        $(function () {
            $('.wizard-content ul li:eq(3)').removeClass('disabled').addClass('current');

            $('.singledate').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,

            });


            $('#sidebarnav > li').removeClass('active');
            $('#sidebarnav > li:nth-child(3)').addClass('active');
        })

        $(".list-dropdown > a").click(function () {
            if ($(this).parent().hasClass("active")) {
                $(".list-dropdown", $(this).parent()).removeClass("active");
                $(".list-submenu", $(this).parent()).slideUp(200);
                $(this).parent().removeClass("active");
            } else {
                $(".list-dropdown", $(this).parent()).removeClass("active");
                $(this).next(".list-submenu").slideDown(200);
                $(this).parent().addClass("active");
            }
        });
    </script>
    @Scripts.Render("~/apps/schedules")
}

@section Styles{
    <link href="/content/assets/plugins/wizard/steps.css" rel="stylesheet">
    <link href="/content/assets/plugins/daterangepicker/daterangepicker.css" rel="stylesheet">
}